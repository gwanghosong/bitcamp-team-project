<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.eomcs.lms.dao.FreeDao">

  <resultMap type="free" id="freeMap">
    <id column="free_id" property="no" />
    <result column="mbr_id" property="memberNo" />
    <result column="titl" property="title" />
    <result column="cont" property="contents" />
    <result column="vw_cnt" property="viewCount" />
    <result column="cdt" property="createdDate" />
    <result column="mdt" property="modifierDate" />
   
    <association property="member" javaType="Member">
      <id column="mbr_id" property="no" />
      <result column="name" property="name" />
    </association>

  </resultMap>
  
  <sql id="select1">
    select
    free_id,
    m.name,
    cont,
    titl,
    f.cdt,
    mdt,
    vw_cnt
    from
    free f
    left outer join mbr m on f.mbr_id =
    m.mbr_id
  </sql>

  <select id="findAll" resultMap="freeMap" parameterType="map">
    <include refid="select1" />
    <where>
      <if test="memberNo != null">f.mbr_id = #{memberNo}</if>
    </where>
    order by
    free_id desc
    <if test="#{size != null || rowNo != null}">
      limit #{rowNo}, #{size}
    </if>
  </select>
  
   <select id="findByNo" resultMap="freeMap" parameterType="int">
    select
    free_id,
    m.name,
    cont,
    titl,
    mdt,
    vw_cnt
    from
    free f
    left outer join mbr m on f.mbr_id =
    m.mbr_id
    where 
    f.free_id = #{value}
  </select> 
  
  <select id="findByKeyword" resultMap="freeMap" parameterType="string">
    <bind name="pattern1" value="'%' + _parameter + '%'"/>
    select
    free_id,
    m.name,
    cont,
    titl,
    f.cdt,
    mdt,
    vw_cnt
    from
    free f
    left outer join mbr m on f.mbr_id =
    m.mbr_id
    where 
      titl like #{pattern1}
     
  </select>
  
  <update id="increaseCount" parameterType="int">
    update free
    set
      vw_cnt = vw_cnt + 1 
      where free_id = #{value};
  </update>
  
    <insert id="insert" parameterType="free"
          useGeneratedKeys="true" keyColumn="free_id" keyProperty="no">
    insert into free(
      titl,
      cont,
      mbr_id) 
    values(
      #{title}, 
      #{contents},
      #{memberNo})
  </insert>
  
  <select id="detailUpdate" resultMap="freeMap" parameterType="int">
    <include refid="select1"/>
    where 
      free_id = #{value}
  </select>
  
  <update id="update" parameterType="free">
    update free
    set
    titl = #{title},
    cont = #{contents}
    where free_id = #{no}
  </update>

  <delete id="delete" parameterType="int">
    delete from free
    where free_id = #{no}
  </delete>
  
  
  <select id="countAll" resultType="int">
    select count(*) from free;
  </select>
</mapper>










