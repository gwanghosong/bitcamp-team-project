<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.eomcs.lms.dao.FreeFileDao">
  
  <resultMap type="freeFile" id="freeFileMap">
    <id column="free_file_id"  property="no"/>
    <result column="free_id"   property="freeNo"/>
    <result column="file_path"  property="filePath"/>
  </resultMap>
  
  <select id="findByFreeNo" resultMap="freeFileMap" parameterType="int">
    select 
      free_file_id, 
      free_id, 
      file_path
    from 
      free_file
    where 
      free_id = #{value}
    order by 
      free_file_id asc
  </select>
  
  <insert id="insert" parameterType="list">
    insert into free_file(
      file_path,
      free_id) 
    values
    
    <foreach collection="list" item="freeFile" separator=",">
      (#{freeFile.filePath},#{freeFile.freeNo})
    </foreach>
    
  </insert>
  
  <delete id="deleteByFreeNo" parameterType="int">
    delete from free_file 
    where free_id = #{value}
  </delete>
</mapper>










